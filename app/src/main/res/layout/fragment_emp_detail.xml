<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDarkGray"
    tools:context=".fragments.EmpDetailFragment"
    android:fitsSystemWindows="true">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_detail"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/coll_bar_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="@android:color/transparent"
                    app:expandedTitleMarginStart="15dp"
                    app:expandedTitleMarginBottom="20dp"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
                    <ImageView
                        android:id="@+id/m_avatar_detail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:fitsSystemWindows="true"
                        app:layout_collapseMode="parallax"
                        android:src="@drawable/emp_man_img" />
                    <View
                        android:layout_gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/shadow_for_img"/>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
    <com.example.employeecard.fragments.DetailScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_marginBottom="58dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:id="@+id/first_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent"
            android:gravity="bottom|center_horizontal">
            <TextView
                android:id="@+id/m_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="EMPLOYEE NAME"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/muli_medium"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:elevation="12dp"/>
            <TextView
                android:id="@+id/m_position_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="EMPLOYEE POSITION"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/muli_regular"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:elevation="12dp"/>
            <TextView
                android:id="@+id/m_exp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Work experience"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/muli_medium"
                android:textSize="16sp"
                android:paddingVertical="8dp"
                android:background="@drawable/rounded_card"
                android:backgroundTint="@color/colorDarkYellow"
                android:gravity="center_horizontal" />
        <LinearLayout
            android:id="@+id/m_info_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#232323"
            android:layout_marginVertical="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal details"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/muli_regular"
            android:layout_marginHorizontal="8dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/muli_regular"
                android:text="Age"
                android:layout_marginHorizontal="16dp"/>
            <TextView
                android:id="@+id/m_age_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textColor="@color/colorTransparent"
                android:fontFamily="@font/muli_regular"
                tools:text="13"
                android:layout_marginHorizontal="24dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/muli_regular"
                android:text="Email"
                android:layout_marginHorizontal="16dp"/>
            <TextView
                android:id="@+id/m_email_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textColor="@color/colorTransparent"
                android:fontFamily="@font/muli_regular"
                tools:text="email address"
                android:layout_marginHorizontal="24dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/muli_regular"
                android:text="Phone"
                android:layout_marginHorizontal="16dp"/>
            <TextView
                android:id="@+id/m_phone_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="16sp"
                android:textColor="@color/colorTransparent"
                android:fontFamily="@font/muli_regular"
                tools:text="+77057851992"
                android:layout_marginHorizontal="24dp"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#232323">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee skills"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/muli_regular"
                android:layout_marginHorizontal="8dp" />
            <TextView
                android:id="@+id/add_skill_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW SKILL+"
                android:textSize="16sp"
                android:textColor="@color/colorBlue"
                android:fontFamily="@font/muli_bold"
                android:layout_marginHorizontal="8dp" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/m_recycler_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

            <Button
                android:id="@+id/m_save_button"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textColor="@color/colorWhite"
                android:enabled="true"
                tools:text="Save changes"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </com.example.employeecard.fragments.DetailScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
