    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/first_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent"
            android:gravity="bottom|center_horizontal">
            <TextView
                android:id="@+id/m_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="EMPLOYEE NAME"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/muli_medium"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:elevation="12dp"/>
            <TextView
                android:id="@+id/m_position_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="EMPLOYEE POSITION"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/muli_regular"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:elevation="12dp"/>
            <TextView
                android:id="@+id/m_exp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Work experience"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/muli_medium"
                android:textSize="16sp"
                android:paddingVertical="8dp"
                android:background="@drawable/rounded_card"
                android:backgroundTint="@color/colorDarkYellow"
                android:gravity="center_horizontal" />
            <LinearLayout
                android:id="@+id/m_info_div"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#232323"
                android:layout_marginVertical="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal details"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/muli_regular"
                    android:layout_marginHorizontal="8dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/muli_regular"
                        android:text="Age"
                        android:layout_marginHorizontal="16dp"/>
                    <TextView
                        android:id="@+id/m_age_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="@color/colorTransparent"
                        android:fontFamily="@font/muli_regular"
                        tools:text="13"
                        android:layout_marginHorizontal="24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/muli_regular"
                        android:text="Email"
                        android:layout_marginHorizontal="16dp"/>
                    <TextView
                        android:id="@+id/m_email_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="@color/colorTransparent"
                        android:fontFamily="@font/muli_regular"
                        tools:text="email address"
                        android:layout_marginHorizontal="24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/muli_regular"
                        android:text="Phone"
                        android:layout_marginHorizontal="16dp"/>
                    <TextView
                        android:id="@+id/m_phone_detail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="@color/colorTransparent"
                        android:fontFamily="@font/muli_regular"
                        tools:text="+77057851992"
                        android:layout_marginHorizontal="24dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#232323">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee skills"
                        android:textSize="20sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/muli_regular"
                        android:layout_marginHorizontal="8dp" />
                    <TextView
                        android:id="@+id/add_skill_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW SKILL+"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlue"
                        android:fontFamily="@font/muli_bold"
                        android:layout_marginHorizontal="8dp" />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/m_recycler_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/m_save_button"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:textColor="@color/colorWhite"
                android:enabled="true"
                tools:text="Save changes"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
